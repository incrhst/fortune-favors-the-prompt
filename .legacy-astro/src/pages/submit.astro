---
import '../styles/global.css';

let submitted = false;
let error = '';
let aiSuggestions: { suggestedTitle: string; category: string; tags: string[] } | null = null;

// Handle form submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const text = formData.get('text') as string;
    const guestName = formData.get('guest_name') as string;
    const guestEmail = formData.get('guest_email') as string;
    const suggestedTitle = formData.get('suggested_title') as string;
    const category = formData.get('category') as string;
    const tagsRaw = formData.get('tags') as string;
    const tags = tagsRaw ? tagsRaw.split(',').map(t => t.trim()).filter(Boolean) : [];

    if (!text || !guestName) {
      error = 'Please fill in all required fields.';
    } else {
      // Import db function
      const { createPrompt } = await import('../lib/db');
      
      await createPrompt({
        text,
        guest_name: guestName,
        guest_email: guestEmail || undefined,
        suggested_title: suggestedTitle || undefined,
        category: category || undefined,
        tags: tags.length > 0 ? tags : undefined,
      });
      
      submitted = true;
    }
  } catch (e) {
    console.error('Submission error:', e);
    error = 'Failed to submit prompt. Please try again.';
  }
}
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Submit your prompt for discussion on the show.">
  <title>Submit a Prompt | Prompt Library</title>
</head>
<body>
  <div class="container">
    <header>
      <h1>Submit a Prompt</h1>
      <p>Share your favorite prompts for discussion on the show</p>
      <nav>
        <a href="/">Library</a>
        <a href="/submit" class="active">Submit a Prompt</a>
      </nav>
    </header>

    {submitted && (
      <div class="success-message animate-in">
        <h3>üéâ Prompt Submitted!</h3>
        <p>Thank you for your submission. It will be reviewed and added to the library soon.</p>
        <a href="/" style="color: white; text-decoration: underline; margin-top: 0.5rem; display: inline-block;">
          ‚Üê Back to Library
        </a>
      </div>
    )}

    {!submitted && (
      <div class="card animate-in" style="max-width: 700px;">
        {error && (
          <div style="background: #fef2f2; border: 1px solid #fee2e2; color: #dc2626; padding: 1rem; border-radius: 8px; margin-bottom: 1.5rem;">
            {error}
          </div>
        )}

        <form method="POST" id="submit-form">
          <div class="form-group">
            <label for="text">Your Prompt *</label>
            <textarea 
              id="text" 
              name="text" 
              placeholder="Paste your prompt here... We'll suggest a title and categorize it for you!"
              required
            ></textarea>
          </div>

          <!-- AI Suggestions Section -->
          <div class="ai-suggestion" id="ai-suggestions" style="display: none;">
            <h3>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
                <path d="M2 17l10 5 10-5"></path>
                <path d="M2 12l10 5 10-5"></path>
              </svg>
              AI Suggestions
            </h3>
            
            <div id="loading-suggestions" class="loading">
              <div class="spinner"></div>
              <span>Analyzing your prompt...</span>
            </div>
            
            <div id="suggestions-content" style="display: none;">
              <div class="form-group">
                <label for="suggested_title">Suggested Title</label>
                <input type="text" id="suggested_title" name="suggested_title" />
              </div>
              
              <div class="form-group">
                <label for="category">Category</label>
                <input type="text" id="category" name="category" />
              </div>
              
              <div class="form-group">
                <label for="tags">Tags (comma-separated)</label>
                <input type="text" id="tags" name="tags" placeholder="e.g., performance, react, debugging" />
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="guest_name">Your Name *</label>
            <input type="text" id="guest_name" name="guest_name" placeholder="How should we credit you?" required />
          </div>

          <div class="form-group">
            <label for="guest_email">Email (optional)</label>
            <input type="email" id="guest_email" name="guest_email" placeholder="We'll notify you when your prompt is approved" />
          </div>

          <button type="submit" class="btn btn-primary" style="width: 100%;">
            Submit Prompt
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,18 15,12 9,6"></polyline>
            </svg>
          </button>
        </form>
      </div>
    )}
  </div>

  <script>
    const textarea = document.getElementById('text') as HTMLTextAreaElement;
    const aiSection = document.getElementById('ai-suggestions');
    const loadingEl = document.getElementById('loading-suggestions');
    const contentEl = document.getElementById('suggestions-content');
    
    let debounceTimer: number;

    textarea?.addEventListener('input', () => {
      const text = textarea.value.trim();
      
      clearTimeout(debounceTimer);
      
      if (text.length > 50) {
        if (aiSection) aiSection.style.display = 'block';
        if (loadingEl) loadingEl.style.display = 'flex';
        if (contentEl) contentEl.style.display = 'none';
        
        debounceTimer = setTimeout(() => {
          fetchSuggestions(text);
        }, 1000);
      } else {
        if (aiSection) aiSection.style.display = 'none';
      }
    });

    async function fetchSuggestions(text: string) {
      try {
        const response = await fetch('/api/classify', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ text })
        });
        
        if (!response.ok) throw new Error('Failed to classify');
        
        const data = await response.json();
        
        (document.getElementById('suggested_title') as HTMLInputElement).value = data.suggestedTitle || '';
        (document.getElementById('category') as HTMLInputElement).value = data.category || '';
        (document.getElementById('tags') as HTMLInputElement).value = (data.tags || []).join(', ');
        
        if (loadingEl) loadingEl.style.display = 'none';
        if (contentEl) contentEl.style.display = 'block';
      } catch (error) {
        console.error('Classification error:', error);
        if (loadingEl) loadingEl.style.display = 'none';
        if (contentEl) contentEl.style.display = 'block';
      }
    }
  </script>
</body>
</html>
